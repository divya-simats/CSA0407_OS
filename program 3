#include <stdio.h>

int main(){
    int n; printf("Number of processes: "); scanf("%d",&n);
    int bt[n];
    for(int i=0;i<n;i++){ printf("BT of P%d: ",i+1); scanf("%d",&bt[i]); }
    int wt[n], tat[n]; wt[0]=0; tat[0]=bt[0];
    for(int i=1;i<n;i++){ wt[i]=wt[i-1]+bt[i-1]; tat[i]=wt[i]+bt[i]; }
    double awt=0, atat=0;
    puts("PID\tBT\tWT\tTAT");
    for(int i=0;i<n;i++){ printf("P%d\t%d\t%d\t%d\n",i+1,bt[i],wt[i],tat[i]); awt+=wt[i]; atat+=tat[i];}
    printf("Avg WT=%.2f, Avg TAT=%.2f\n",awt/n,atat/n);
}
