#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <string.h>
#include <unistd.h>
int main(){
    key_t key = ftok(".", 65);
    int shmid = shmget(key, 1024, 0666|IPC_CREAT);
    char str = (char) shmat(shmid, (void*)0, 0);
    if(fork()==0){
        // child reads
        sleep(1);
        printf("Child reads: %s\n", str);
        shmdt(str);
    } else {
        // parent writes
        strcpy(str, "Hello from parent via SHM");
        wait(NULL);
        shmdt(str); shmctl(shmid, IPC_RMID, NULL);
    }
}
