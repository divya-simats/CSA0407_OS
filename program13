#include <stdio.h>
#include <pthread.h>
#include <unistd.h>

#define N 5
pthread_mutex_t forkm[N];

void *philosopher(void *arg){
    int id = (int)arg;
    int left = id, right = (id+1)%N;
    for(int i=0;i<2;i++){
        pthread_mutex_lock(&forkm[left]);
        pthread_mutex_lock(&forkm[right]);
        printf("Philosopher %d eating\n", id);
        sleep(1);
        pthread_mutex_unlock(&forkm[right]);
        pthread_mutex_unlock(&forkm[left]);
    }
    return NULL;
}

int main(){
    pthread_t tid[N]; int ids[N];
    for(int i=0;i<N;i++) pthread_mutex_init(&forkm[i], NULL);
    for(int i=0;i<N;i++){ ids[i]=i; pthread_create(&tid[i],NULL,philosopher,&ids[i]); }
    for(int i=0;i<N;i++) pthread_join(tid[i],NULL);
    return 0;
    }
