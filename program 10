#include <stdio.h>
#include <sys/ipc.h>
#include <sys/msg.h>
#include <string.h>
#include <unistd.h>

struct msgbuf{ long mtype; char mtext[100]; };

int main(){
    key_t key = ftok(".", 75);
    int msgid = msgget(key, 0666 | IPC_CREAT);
    struct msgbuf message;
    if(fork()==0){
        // child receives
        msgrcv(msgid, &message, sizeof(message.mtext), 1, 0);
        printf("Child received: %s\n", message.mtext);
    } else {
        // parent sends
        message.mtype = 1;
        strcpy(message.mtext, "Message queue IPC");
        msgsnd(msgid, &message, sizeof(message.mtext), 0);
        wait(NULL);
        msgctl(msgid, IPC_RMID, NULL);
    }
}
