#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>

int main(){
    int fd = open(".", O_RDONLY);
    if(fd<0){ perror("open"); return 1; }
    // fcntl: get flags
    int flags = fcntl(fd, F_GETFD);
    printf("fcntl getfd returned %d\n", flags);
    close(fd);

    // lseek and stat
    int f = open("io_syscalls.c", O_RDONLY);
    if(f>=0){
        off_t off = lseek(f, 0, SEEK_END);
        printf("Size of this file = %ld bytes\n", (long)off);
        struct stat sb;
        if(stat("io_syscalls.c", &sb)==0) printf("stat: mode=%o size=%ld\n", sb.st_mode, (long)sb.st_size);
        close(f);
    } else printf("io_syscalls.c not found\n");
    // opendir & readdir
    DIR *d = opendir(".");
    if(d){
        struct dirent *entry;
        printf("Directory entries:\n");
        while((entry = readdir(d)) != NULL) printf("  %s\n", entry->d_name);
        closedir(d);
    }
    return 0;
}

