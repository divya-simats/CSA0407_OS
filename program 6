#include <stdio.h>
#include <limits.h>
int main(){
    int n; printf("n: "); scanf("%d",&n);
    int at[n], bt[n], rt[n], pr[n];
    for(int i=0;i<n;i++){ printf("P%d AT BT PR: ",i+1); scanf("%d %d %d",&at[i],&bt[i],&pr[i]); rt[i]=bt[i]; }
    int complete=0, t=0; int wt[n], tat[n];
    for(int i=0;i<n;i++) wt[i]=0;
    while(complete<n){
        int idx=-1, best=INT_MAX;
        for(int i=0;i<n;i++) if(at[i]<=t && rt[i]>0 && pr[i]<best){ best=pr[i]; idx=i; }
        if(idx==-1){ t++; continue; }
        rt[idx]--; t++;
        if(rt[idx]==0){ complete++; tat[idx]=t - at[idx]; wt[idx]=tat[idx]-bt[idx]; }
    }
    puts("PID AT BT PR WT TAT");
    for(int i=0;i<n;i++) printf("P%d %d %d %d %d %d\n",i+1,at[i],bt[i],pr[i],wt[i],tat[i]);
}
